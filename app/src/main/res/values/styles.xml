<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButtonTheme" parent="AlertDialog.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:elevation">@dimen/custom_button_elevation</item>
    </style>

</resources>
